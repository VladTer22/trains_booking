<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>

<p>
  <strong>Route:</strong>
  <%= render 'train_route' %>
</p>

<p>
  <strong>All carriages:</strong>
  <% @train.carriages.ordered.each do |carriage| %>
    <%= link_to "Carriage N#{carriage.number}", carriage %>
  <% end %><br>
  <%= render 'train_carriages' %>
</p>

<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %>
