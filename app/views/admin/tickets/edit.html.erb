<h2>Edit ticket</h2>

<table>
  <tbody>
  <tr>
    <th>Train:</th>
    <td><%= @ticket.train.number %></td>
  </tr>
  <tr>
    <th>Route:</th>
    <td><%= @ticket.train.route.name %></td>
  </tr>
  <tr>
    <th>Start station:</th>
    <td><%= @ticket.start_station.title %></td>
  </tr>
  <tr>
    <th>End station:</th>
    <td><%= @ticket.end_station.title %></td>
  </tr>
  </tbody>
</table>

<%= render 'form', ticket: @ticket %>

<p>
  <%= link_to 'Tickets', admin_tickets_path %>
</p>
